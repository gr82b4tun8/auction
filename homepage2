<body>
    <div class="navbar">
        <h1 style="color: #2f7a64;">Art Auctions</h1>
        <input type="text" placeholder="Search auctions...">
    </div>
    <div class="hero">
        <h2>Find Exclusive Art Auctions</h2>
        <p>Bid on stunning artwork from top artists and collectors worldwide.</p>
        <button onclick="alert('Viewing Auctions...')">View Auctions</button>
    </div>
    <div class="auction-container" id="auction-list">
        <!-- Auctions will be added dynamically here -->
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const auctions = [
                { id: 1, title: "Classic 1967 Mustang", image: "https://via.placeholder.com/400", currentBid: "$25,000", timeLeft: "2h 15m" },
                { id: 2, title: "2020 Tesla Model 3", image: "https://via.placeholder.com/400", currentBid: "$38,500", timeLeft: "4h 10m" },
                { id: 3, title: "Porsche 911 Turbo S", image: "https://via.placeholder.com/400", currentBid: "$120,000", timeLeft: "1d 3h" }
            ];

            const auctionContainer = document.getElementById("auction-list");
            if (!auctionContainer) {
                console.error("Error: Could not find auction list container.");
                return;
            }

            auctions.forEach(auction => {
                const auctionDiv = document.createElement("div");
                auctionDiv.classList.add("auction");
                auctionDiv.innerHTML = `
                    <img src="${auction.image}" alt="${auction.title}">
                    <h3>${auction.title}</h3>
                    <p>Current Bid: <span style="color: #2f7a64; font-weight: bold;">${auction.currentBid}</span></p>
                    <p>Time Left: ${auction.timeLeft}</p>
                    <button onclick="alert('Bid placed on ${auction.title}')">Bid Now</button>
                `;
                auctionContainer.appendChild(auctionDiv);
            });
        });
    </script>
</body>
