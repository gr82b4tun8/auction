        }
        .navbar input {
            padding: 8px;
            border-radius: 5px;
            border: none;
        }
        .hero {
            text-align: center;
            background-color: #444;
            padding: 50px 20px;
        }
        .hero button, .auction button {
            background-color: #2f7a64;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .auction-container {
            display: flex;
            flex-wrap: wrap;
